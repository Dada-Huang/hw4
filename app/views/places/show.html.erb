<h2><%= @place["name"] %></h2>

<div class="row">
  <div class="col-sm-9 mt-2 mb-4">
      <h4>My Posts</h4>
  </div>
  <div class="col-sm-3 text-end">
    <a href="/posts/new?place_id=<%= @place["id"] %>" class="btn btn-success">New Post</a>
    <a href="/places" class="btn btn-success">Back to All Places</a>
  </div>
</div>  


<div class="row">

  <% for post in @posts %>
    <div class="col-lg-4 col-sm-6">

      <h4><%= post["title"] %></h4>
      <h5>
        <%# find user who created post %>
        <% user = User.find_by({ "id" => post["user_id"] }) %>
        <%# handle any potential bad data where the post is missing a user %>
        <% if user %>
          <%= user["username"] %>
        <% else %>
          anonymous
        <% end %>
      </h5>

      <% if post.uploaded_image.attached? %>
        <img src="<%= url_for(post.uploaded_image) %>" class="img-fluid">
      <% else %>
        <img src="<%= post["image"] %>" class="img-fluid">
      <% end %>

      <p><%= post["body"] %></p>

      <h5><%= post["posted_on"] %></h5>
      <p><%= post["description"] %></p>


    </div>
  <% end %>



</div>
